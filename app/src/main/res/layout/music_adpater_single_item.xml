<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="20dp"
    android:paddingEnd="15dp"
    android:background="@drawable/rounded_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/musicImageSingleItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/spotify2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvMusicTitleSingleItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toRightOf="@id/musicImageSingleItem"
        app:layout_constraintTop_toTopOf="@id/musicImageSingleItem"
        app:layout_constraintBottom_toBottomOf="@id/musicImageSingleItem"/>

</androidx.constraintlayout.widget.ConstraintLayout>